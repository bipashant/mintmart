<%= render 'shared/header'%>
<div class="ch-container">
  <div class="row">
    <%= render 'shared/navigation_menu'%>
    <div id="content" class="col-lg-10 col-sm-10">
      <!-- content starts -->
      <%= render 'shared/breadcumb'%>
      <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="fa fa-sitemap"></i> Sells Details</h2>
              <div class="box-icon">
                <a href="#" class="btn btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round btn-default"><i
                class="glyphicon glyphicon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
              </div>
            </div>
            <div class="box-content">
              <table class="table table-striped table-bordered bootstrap-datatable datatable responsive" id="purchase-table">
                <thead>
                <tr>
                  <th>Receipt no.</th>
                  <th>Customer Name</th>
                  <th>Amount</th>
                  <th>Payment Method</th>
                </tr>
                </thead>
                <tbody>
                <% @sales.each do |sale| %>
                    <tr>
                      <td class="center"><%= sale.invoice_id %> </td>
                      <td class="center"><%= sale.customer.full_name %> </td>
                      <td class="center"><%= sale.payment_method %> </td>
                      <td class="center"><%= sale.amount %> </td>
                      <td class="center">
                        <%= link_to ' <i class="glyphicon glyphicon-zoom-in icon-white"></i> View'.html_safe, sale_path(sale),class:'btn btn-success' %>
                      </td>
                    </tr>
                <% end %>

                </tbody>
              </table>


            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="fa fa-sitemap"></i> Items List</h2>
              <div class="box-icon">
                <a href="#" class="btn btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round btn-default"><i
                class="glyphicon glyphicon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
              </div>
            </div>
            <div class="box-content">

              <div class="col-xs-12 col-md-3 pull-right">
                <div class="xn-search pull-right margin-bottom">
                  <form role="form">
                    <input type="text" name="search" placeholder="Search" id="input-search-items">
                  </form>
                </div>
              </div>
              <div class="col-xs-12 col-md-5 pull-left">
                <div class="status_success margin-bottom" id="status_div_purchase">
                </div>
              </div>
              <table class="table table-striped table-bordered bootstrap-datatable datatable responsive" id = "items-main-table-new" data-source="<%= purchase_path(format: :json) %>">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Unit Price</th>
                  <th>Sell Price</th>
                  <th>Quantity</th>
                  <th>Expiration_date</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div><!--/.fluid-container-->

<%= render 'shared/logout_msgbox' %>
