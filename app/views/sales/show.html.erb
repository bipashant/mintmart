<%= render 'shared/header'%>
<div class="ch-container">
  <div class="row">
    <%= render 'shared/navigation_menu'%>
    <div id="content" class="col-lg-10 col-sm-10">
      <!-- content starts -->
      <%= render 'shared/breadcumb'%>
      <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="fa fa-sitemap"></i> Sells Details</h2>
              <div class="box-icon">
                <a href="#" class="btn btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round btn-default"><i
                class="glyphicon glyphicon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
              </div>
            </div>
            <div class="box-content">
              <table class="table table-striped table-bordered bootstrap-datatable datatable responsive" id="purchase-table">
                <thead>
                <tr>
                  <th>Receipt no.</th>
                  <th>Customer Name</th>
                  <th>Amount</th>
                  <th>Payment Method</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                      <td class="center"><%= @sale.invoice_id %> </td>
                      <td class="center"><%= @sale.customer.full_name %> </td>
                      <td class="center"><%= @sale.amount %> </td>
                      <td class="center"><%= @sale.payment_method %> </td>
                    </tr>
                </tbody>
              </table>


            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="box col-md-12">
          <div class="box-inner">
            <div class="box-header well" data-original-title="">
              <h2><i class="fa fa-sitemap"></i> Items List</h2>
              <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round btn-default"><i
                class="glyphicon glyphicon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
              </div>
            </div>
            <div class="box-content">

              <div class="col-xs-12 col-md-3 pull-right">
                <div class="xn-search pull-right margin-bottom">
                  <form role="form">
                    <input type="text" name="search" placeholder="Search" id="input-search-itemsOn-Category">
                  </form>
                </div>
              </div>
              <table class="table table-striped table-bordered bootstrap-datatable datatable responsive" id="items-table-on-category">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Unit Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                </tr>
                </thead>
                <tbody>
                <% @sale.sold_items.each do |item| %>
                    <tr>
                      <td><%=item.name%></td>
                      <td class="align_right">NRS <%= number_with_precision(item.rate, precision: 2) %> </td>
                      <td class="align_right"><%=item.quantity %> </td>
                      <td class="align_right"><%=item.total %> </td>
                    </tr>
                <% end %>

                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div><!--/.fluid-container-->

<%= render 'shared/logout_msgbox' %>
